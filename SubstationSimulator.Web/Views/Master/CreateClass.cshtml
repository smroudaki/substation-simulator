@model ElectricalEmulator.Application.ViewModels.Admins.CreateClassViewModel

<form asp-action="CreateClass" method="post" id="modal-form">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="UserId"></label>
                <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control select2"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="col-form-label"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">لغو</button>
    <button type="submit" class="btn btn-primary">ثبت</button>
</form>

<script>
    $('.select2').select2()
</script>

<partial name="_ValidationScriptsPartial" />